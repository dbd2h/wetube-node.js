extends base.pug

block content
    h4 Change Title of Video
    form(method="POST")
        input(name="title",placeholder="Video Title", value=video.title,required)
        input(name="description",placeholder="Video Title", value=video.description,required)
        input(name="hashtags",placeholder="Video Title", value=video.hashtags.map((element)=>element.startsWith("#")? element.slice(1): element).join(),required)
        input(value="Save", type="submit") 

